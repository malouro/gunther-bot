{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "./esm",
		"target": "ES2022",
		"moduleResolution": "node",
		"types": ["node", "jest"],
		"rootDir": "./src",
		"paths": {
			"@/*": ["./src/*"],
			"@root/*": ["./*"]
		}
	},
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	},
	"exclude": ["_old_", "examples", "jest.*"]
}
