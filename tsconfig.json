    "outDir": "./dist/esm",
    "target": "ES2019",
    "moduleResolution": "node",
    "types": [
      "node",
      "jest"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "./data",
    "./src"
  ]
}
