{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "./esm",
		"target": "ES2020",
		"moduleResolution": "node",
		"types": ["node", "jest"],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["./data", "./src", "./utils"]
}
