{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./esm",
    "target": "es6",
    "moduleResolution": "node",
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "./data",
    "./src",
    "./utils"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}
