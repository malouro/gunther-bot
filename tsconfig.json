{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "./esm",
		"target": "ES2022",
		"moduleResolution": "node",
		"types": ["node", "jest"],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["./src"],
	"ts-node": {
		"require": ["tsconfig-paths/register"]
	}
}
