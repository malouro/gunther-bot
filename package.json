{
  "name": "gunther-bot",
  "version": "0.1.0",
  "description": "Stardew Valley Discord Bot",
  "repository": "https://github.com/malouro/gunther-bot.git",
  "author": "Mike A. Louro <mike.a.louro@gmail.com>",
  "license": "MIT",
  "private": true,
  "main": "./dist/cjs/src/",
  "module": "./dist/esm/src/",
  "bin": {
    "build-sdv-data": "./dist/cjs/data/build.js"
  },
  "dependencies": {
    "discord.js": "^12.5.1",
    "discord.js-commando": "^0.12.2",
    "dotenv": "^8.2.0",
    "winston": "^3.3.3"
  },
  "scripts": {
    "start": "ts-node ./src/index",
    "build": "yarn build:esm && yarn build:cjs",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig-cjs.json",
    "build:data": "ts-node ./data/build",
    "clean": "npx rimraf ./dist",
    "lint": "eslint .",
    "check:format": "prettier --check **/*.ts",
    "check:spelling": "npx cspell **/*.ts",
    "format": "yarn check:format --write",
    "test": "ts-mocha **/*.test.ts"
  },
  "devDependencies": {
    "@types/expect": "^24.3.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.25",
    "@types/node-fetch": "^2.5.8",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "cheerio": "^1.0.0-rc.5",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "mocha": "^8.2.1",
    "node-fetch": "^2.6.1",
    "prettier": "^2.2.1",
    "ts-mocha": "^8.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "yargs": "^16.2.0"
  }
}
